<%= form_for @user do |f| %>

<%= f.label :first_name %><br>
<%= f.text_field :first_name %>

<%= f.label :last_name %><br>
<%= f.text_field :last_name %>

<hr />

<%= f.label :email %><br>
<%= f.text_field :email %>

<%= f.label :password %><br>
<%= f.password_field :password %>

<%= f.label :password_confirmation %>
<%= f.password_field :password_confirmation %>

<%= f.submit %>

<!-- 'target' symbol is defined in '_form_errors' partial -->
<%= render '/layouts/shared/form_errors', target: f.object %> 

<%end%>